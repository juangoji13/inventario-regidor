@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap');

:root {
    --primary: #2563eb;
    --primary-dark: #1e40af;
    --accent: #fbbf24;
    --glass-bg: rgba(255, 255, 255, 0.75);
    --glass-border: rgba(255, 255, 255, 0.6);
    --glass-edge: rgba(255, 255, 255, 0.4);
    --text-head: #0f172a;
    --text-main: #1e293b;
    --text-muted: #475569;
    --industrial-slate: #334155;
    --radius-lg: 28px;
    --radius-md: 18px;
    --font-main: 'Outfit', sans-serif;
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    -webkit-tap-highlight-color: transparent;
}

body {
    font-family: var(--font-main);
    background-color: #4c6194;
    /* Fondo con viñeta más profunda para integrar el cristal */
    background-image: radial-gradient(circle at center, rgba(15, 23, 42, 0.3) 0%, rgba(15, 23, 42, 0.7) 100%),
        url('construction-site.jpg');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    color: var(--text-main);
    line-height: 1.6;
    min-height: 100vh;
}

/* --- ANIMACIONES --- */
@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* --- LAYOUT --- */
.app-container {
    max-width: 500px;
    margin: 0 auto;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    position: relative;
    backdrop-filter: blur(5px);
    padding-bottom: 3rem;
    /* Espacio al final para scroll */
}

/* --- AUTH PAGE --- */
#auth-page {
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
}

.auth-header {
    text-align: center;
    margin-bottom: 2.5rem;
    animation: slideUp 0.6s ease-out;
}

.auth-header h1 {
    font-size: 3.5rem;
    color: white;
    font-weight: 800;
    letter-spacing: -2px;
    margin-bottom: 5px;
    text-shadow: 0 4px 12px rgba(0, 0, 0, 0.3);
}

.auth-header p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 4px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

.auth-card {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(30px) saturate(160%);
    -webkit-backdrop-filter: blur(30px) saturate(160%);
    border: 1px solid var(--glass-border);
    padding: 3.5rem 2.5rem;
    border-radius: var(--radius-lg);
    box-shadow:
        0 30px 60px rgba(0, 0, 0, 0.25),
        inset 0 0 0 1px var(--glass-edge);
    animation: slideUp 0.8s ease-out;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    display: block;
    font-size: 0.85rem;
    color: var(--text-head);
    margin-bottom: 0.6rem;
    font-weight: 600;
}

input,
select {
    width: 100%;
    background: white;
    border: 1px solid #e2e8f0;
    padding: 1rem;
    border-radius: 14px;
    color: var(--text-head);
    font-size: 1rem;
    transition: all 0.3s ease;
    font-family: inherit;
}

input:focus,
select:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
}

.btn {
    width: 100%;
    padding: 1.1rem;
    border-radius: 14px;
    border: none;
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
}

.btn-primary {
    background: var(--primary);
    color: white;
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
}

.btn-outline {
    background: rgba(15, 23, 42, 0.08);
    border: 1px solid var(--industrial-slate);
    color: var(--industrial-slate);
}

.btn-outline:hover {
    background: var(--industrial-slate);
    color: white;
}

/* --- DASHBOARD UI --- */
header {
    padding: 3rem 1.5rem 2rem;
    background: transparent;
    position: relative;
    z-index: 100;
}

.header-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.brand-info h2 {
    font-size: 1.8rem;
    color: white;
    font-weight: 800;
    letter-spacing: -1px;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
}

.brand-info p {
    font-size: 0.95rem;
    color: var(--accent);
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-top: -2px;
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.5);
}

#logout-btn {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: white;
    padding: 8px 16px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s ease;
}

#logout-btn:hover {
    background: rgba(244, 63, 94, 0.2);
    border-color: #f43f5e;
}

main {
    padding: 1.5rem;
}

.stats-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
    margin-bottom: 1.5rem;
}

.stat-card {
    background: rgba(255, 255, 255, 0.82);
    backdrop-filter: blur(20px) saturate(150%);
    padding: 1.8rem 1.4rem;
    border-radius: var(--radius-md);
    text-align: left;
    box-shadow:
        0 15px 35px rgba(0, 0, 0, 0.12),
        inset 0 0 0 1px var(--glass-edge);
    border: 1px solid var(--glass-border);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.stat-card:hover {
    transform: translateY(-5px);
}

.stat-card span {
    font-size: 0.75rem;
    color: var(--text-muted);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.stat-card h4 {
    font-size: 2.2rem;
    color: var(--text-head);
    margin-top: 4px;
    font-weight: 800;
}

.section-title {
    font-size: 1.1rem;
    font-weight: 800;
    color: white;
    margin: 2.5rem 0 1.2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

.history-card {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(25px) saturate(140%);
    padding: 0.8rem 1.8rem;
    border-radius: var(--radius-lg);
    box-shadow:
        0 20px 40px rgba(0, 0, 0, 0.15),
        inset 0 0 0 1px var(--glass-edge);
    border: 1px solid var(--glass-border);
}

.movement-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
}

.movement-row:last-child {
    border-bottom: none;
}

.mov-info h5 {
    color: var(--text-head);
    font-size: 0.95rem;
    font-weight: 600;
}

.mov-info p {
    font-size: 0.75rem;
    color: var(--text-muted);
}

.mov-val {
    font-weight: 700;
    font-size: 1rem;
}

.val-in {
    color: #059669;
}

.val-out {
    color: #e11d48;
}

/* Menú de Acciones */
.action-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
    margin-top: 1.5rem;
}

.action-btn {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    padding: 1.5rem 1rem;
    border-radius: 28px;
    color: var(--text-head);
    text-align: center;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    border: 1px solid rgba(255, 255, 255, 0.6);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
}

.action-btn:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 15px 30px rgba(37, 99, 235, 0.15);
    border-color: var(--primary);
    background: white;
}

.action-btn i {
    font-size: 1.8rem;
    display: block;
    margin-bottom: 10px;
}

.action-btn span {
    font-size: 0.85rem;
    font-weight: 600;
}

/* --- FLATPICKR CUSTOM: SMOKED INDUSTRIAL GLASS --- */
.flatpickr-calendar {
    background: rgba(15, 23, 42, 0.9) !important;
    backdrop-filter: blur(25px) saturate(180%) !important;
    -webkit-backdrop-filter: blur(25px) saturate(180%) !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    border-radius: 24px !important;
    box-shadow: 0 40px 80px rgba(0, 0, 0, 0.6) !important;
    font-family: var(--font-main) !important;
    margin-top: 10px !important;
}

.flatpickr-months .flatpickr-month {
    color: white !important;
    fill: white !important;
    font-weight: 800 !important;
}

.flatpickr-current-month .flatpickr-monthDropdown-months {
    font-weight: 700 !important;
    background: transparent !important;
    color: white !important;
}

.flatpickr-weekday {
    color: rgba(255, 255, 255, 0.5) !important;
    font-weight: 700 !important;
    text-transform: uppercase !important;
}

.flatpickr-day {
    color: rgba(255, 255, 255, 0.9) !important;
    border-radius: 12px !important;
}

.flatpickr-day:hover {
    background: rgba(255, 255, 255, 0.1) !important;
}

.flatpickr-day.selected {
    background: var(--primary) !important;
    border-color: var(--primary) !important;
    box-shadow: 0 0 20px rgba(37, 99, 235, 0.5) !important;
    font-weight: 800 !important;
}

.flatpickr-day.prevMonthDay,
.flatpickr-day.nextMonthDay {
    color: rgba(255, 255, 255, 0.2) !important;
}

.flatpickr-monthDropdown-month {
    background: #0f172a !important;
    color: white !important;
}

/* Utilities */
.hidden {
    display: none !important;
}
